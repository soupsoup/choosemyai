<div class="row mb-4">
    <div class="col-md-8">
        <h1>AI Tools Directory</h1>
        <p class="lead">Discover and share the latest AI tools and resources</p>
    </div>
    <div class="col-md-4">
        <form action="/" method="GET" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search tools...">
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>

<div class="row g-4">
    <% if (tools && tools.length > 0) { %>
        <% tools.forEach(function(tool) { %>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <% if (tool.imageUrl) { %>
                        <img src="<%= tool.imageUrl %>" class="card-img-top" alt="<%= tool.name %>">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= tool.name %></h5>
                        <p class="card-text"><%= tool.description %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/tool/<%= tool.id %>" class="btn btn-primary">Learn More</a>
                            <small class="text-muted">
                                <% if (tool.categories) { %>
                                    <% tool.categories.forEach(function(category) { %>
                                        <span class="badge bg-secondary"><%= category.name %></span>
                                    <% }); %>
                                <% } %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col">
            <div class="alert alert-info">
                No tools found. <% if (locals.user) { %><a href="/submit-tool">Submit one!</a><% } %>
            </div>
        </div>
    <% } %>
</div>